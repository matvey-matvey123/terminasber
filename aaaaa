    <!-- –ê—É–¥–∏–æ –¥–ª—è —Ñ–æ–Ω–æ–≤–æ–π –º—É–∑—ã–∫–∏ -->
    <audio id="newYearAudio" loop>
        <source src="https://assets.mixkit.co/music/preview/mixkit-jingle-bells-311.mp3" type="audio/mpeg">
    </audio>
    
    <script>
        // –°–æ–∑–¥–∞–Ω–∏–µ —Å–Ω–µ–∂–∏–Ω–æ–∫
        function createSnowflakes() {
            const snowflakeContainer = document.body;
            const snowflakeCount = 50;
            
            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.classList.add('snowflake');
                snowflake.innerHTML = '‚ùÑ';
                
                // –°–ª—É—á–∞–π–Ω—ã–µ –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –¥–ª—è —Å–Ω–µ–∂–∏–Ω–∫–∏
                const size = Math.random() * 20 + 10;
                const startPosition = Math.random() * 100;
                const fallDuration = Math.random() * 5 + 5;
                const fallDelay = Math.random() * 5;
                
                snowflake.style.left = `${startPosition}vw`;
                snowflake.style.fontSize = `${size}px`;
                snowflake.style.animationDuration = `${fallDuration}s`;
                snowflake.style.animationDelay = `${fallDelay}s`;
                
                snowflakeContainer.appendChild(snowflake);
            }
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ –∑–≤–µ–∑–¥
        function createStars() {
            const starContainer = document.body;
            const starCount = 30;
            
            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                const size = Math.random() * 4 + 2;
                const leftPosition = Math.random() * 100;
                const topPosition = Math.random() * 50;
                const twinkleDuration = Math.random() * 2 + 2;
                
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${leftPosition}vw`;
                star.style.top = `${topPosition}vh`;
                star.style.animationDuration = `${twinkleDuration}s`;
                
                starContainer.appendChild(star);
            }
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ –æ–≥–æ–Ω—å–∫–æ–≤ –Ω–∞ –µ–ª–∫–µ
        function createTreeLights() {
            const treeContainer = document.querySelector('.tree-container');
            const lightCount = 20;
            const colors = ['#ff0000', '#00ff00', '#ffff00', '#ff00ff', '#00ffff', '#ff9900'];
            
            for (let i = 0; i < lightCount; i++) {
                const light = document.createElement('div');
                light.classList.add('light');
                
                const colorIndex = Math.floor(Math.random() * colors.length);
                const horizontalPos = Math.random() * 100;
                const verticalPos = Math.random() * 80 + 10; // –í –æ–±–ª–∞—Å—Ç–∏ –µ–ª–∫–∏
                const twinkleDuration = Math.random() * 2 + 1;
                
                light.style.backgroundColor = colors[colorIndex];
                light.style.left = `${horizontalPos}%`;
                light.style.top = `${verticalPos}%`;
                light.style.animationDuration = `${twinkleDuration}s`;
                
                treeContainer.appendChild(light);
            }
        }
        
        // –û–±—Ä–∞—Ç–Ω—ã–π –æ—Ç—Å—á–µ—Ç –¥–æ –ù–æ–≤–æ–≥–æ –≥–æ–¥–∞
        function updateCountdown() {
            const now = new Date();
            const currentYear = now.getFullYear();
            const nextYear = currentYear + 1;
            const newYearDate = new Date(`January 1, ${nextYear} 00:00:00`);
            const diff = newYearDate - now;
            
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            document.getElementById('days').textContent = days.toString().padStart(2, '0');
            document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
            document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
            document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
        }
        
        // –ê–Ω–∏–º–∞—Ü–∏—è –µ–ª–∫–∏
        function animateTree() {
            const tree = document.getElementById('christmas-tree');
            let scale = 1;
            let direction = 0.005;
            
            setInterval(() => {
                scale += direction;
                if (scale > 1.1 || scale < 0.9) {
                    direction *= -1;
                }
                tree.style.transform = `scale(${scale})`;
            }, 100);
        }
        
        // –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –º—É–∑—ã–∫–∏ –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ –µ–ª–∫—É
        function setupAudio() {
            const tree = document.getElementById('christmas-tree');
            const audio = document.getElementById('newYearAudio');
            let isPlaying = false;
            
            tree.addEventListener('click', () => {
                if (!isPlaying) {
                    audio.play();
                    isPlaying = true;
                    tree.style.cursor = 'pointer';
                    tree.title = '–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –º—É–∑—ã–∫—É';
                } else {
                    audio.pause();
                    audio.currentTime = 0;
                    isPlaying = false;
                    tree.title = '–í–∫–ª—é—á–∏—Ç—å –º—É–∑—ã–∫—É';
                }
            });
            
            // –î–æ–±–∞–≤–ª—è–µ–º –∞–Ω–∏–º–∞—Ü–∏—é –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏ –Ω–∞ –µ–ª–∫—É
            tree.addEventListener('mouseover', () => {
                tree.style.transform = 'scale(1.2)';
                tree.style.transition = 'transform 0.3s';
            });
            
            tree.addEventListener('mouseout', () => {
                tree.style.transform = 'scale(1)';
            });
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        document.addEventListener('DOMContentLoaded', () => {
            createSnowflakes();
            createStars();
            createTreeLights();
            animateTree();
            setupAudio();
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç—Å—á–µ—Ç –∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É
            updateCountdown();
            setInterval(updateCountdown, 1000);
            
            // –î–æ–±–∞–≤–ª—è–µ–º –ø–ª–∞–≤–∞—é—â—É—é –∞–Ω–∏–º–∞—Ü–∏—é –¥–ª—è –Ω–µ–∫–æ—Ç–æ—Ä—ã—Ö —ç–ª–µ–º–µ–Ω—Ç–æ–≤
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.animation = `float ${3 + index * 0.5}s ease-in-out infinite`;
            });
        });
    </script>
</body>
